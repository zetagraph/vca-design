  </div>

  <style>
    .section {
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 14rem 0;
      text-align: center;
      background-color: var(--provincial-pink);
      color: white;
    }

    .container {
      max-width: 1000px;
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      align-items: center;
      gap: 6rem;
    }

    img {
      --s: 250px; /* the size of the image */
      --b: 8px; /* the border thickness*/
      --g: 14px; /* the gap */
      --c: var(--yellow); /* the color */

      width: var(--s);
      aspect-ratio: 1;
      outline: calc(var(--s) / 2) solid rgba(45, 45, 45, 0.6);
      outline-offset: calc(var(--s) / -2);
      cursor: pointer;
      transition: 0.3s;
    }

    img:hover {
      outline: var(--b) solid var(--c);
      outline-offset: var(--g);
    }

    .border--red {
      --c: var(--red);
    }

    .border--green {
      --c: var(--green);
    }

    .border--blue {
      --c: var(--blue);
    }

    img {
      border-radius: 50%;
    }
  </style>
</section>
